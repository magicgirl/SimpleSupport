%header.text-align-center
  %h4= t 'sessions.sign_in.title'
.body
  = form_for resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'no-margin'} do |f|
    %fieldset
      .control-group.no-margin
        = f.label :email, t('sessions.sign_in.email'), class: 'control-label'
        .control
          .input-prepend.input-padding-increased
            %span.add-on
              %i.icon-user.icon-large
            = f.email_field :email, autofocus: true, placeholder: t('sessions.sign_in.email_placeholder')
      .control-group
        = f.label :password, t('sessions.sign_in.password'), class: 'control-label'
        .control
          .input-prepend.input-padding-increased
            %span.add-on
              %i.icon-lock.icon-large
            = f.password_field :password, placeholder: t('sessions.sign_in.password_placeholder')
      .form-actions
        = f.submit t('sessions.sign_in.submit'), class: 'btn btn-block btn-large btn-danger'
        .forgot
          = link_to t('sessions.sign_in.register_new_account'), new_user_registration_path, class: 'forgot'