.row
  .col-md-4.col-md-offset-4
    .well
      = form_for resource, :as => resource_name, :url => session_path(resource_name), html: {role: 'form'} do |f|
        %legend= t 'sessions.sign_in.title'
        .form-group
          = f.text_field :email, :autofocus => true, class: 'form-control', placeholder: t('sessions.sign_in.email')
        .form-group
          = f.password_field :password, class: 'form-control', placeholder: t('sessions.sign_in.password')
        = f.submit t('sessions.sign_in.title'), class: 'btn btn-primary'