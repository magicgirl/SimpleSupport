.row
  .col-md-4.col-md-offset-4
    .well
      = form_for resource, :as => resource_name, :url => registration_path(resource_name), html: {role: 'form'} do |f|
        %legend= t 'sessions.sign_up.title'
        .form-group
          = f.text_field :email, :autofocus => true, class: 'form-control', placeholder: t('sessions.sign_up.email')
        .form-group
          = f.password_field :password, class: 'form-control', placeholder: t('sessions.sign_up.password')
        .form-group
          = f.password_field :password_confirmation, class: 'form-control', placeholder: t('sessions.sign_up.password_confirmation')
        = f.submit t('sessions.sign_up.title'), class: 'btn btn-primary'