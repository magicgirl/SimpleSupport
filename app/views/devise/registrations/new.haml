%header.text-align-center
  %h4= t 'sessions.sign_up.title'
.body
  = form_for resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'no-margin'} do |f|
    %fieldset
      .control-group
        = f.label :email, t('sessions.sign_up.email'), class: 'control-label'
        .control
          .input-prepend.input-padding-increased
            %span.add-on
              %i.icon-user.icon-large
            = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: t('sessions.sign_up.email')
      .control-group
        = f.label :password, t('sessions.sign_up.password'), class: 'control-label'
        .control
          .input-prepend.input-padding-increased
            %span.add-on
              %i.icon-lock.icon-large
            = f.password_field :password, class: 'form-control', placeholder: t('sessions.sign_up.password')
      .control-group
        = f.label :password_confirmation, t('sessions.sign_up.password_confirmation'), class: 'control-label'
        .control
          .input-prepend.input-padding-increased
            %span.add-on
              %i.icon-lock.icon-large
            = f.password_field :password_confirmation, class: 'form-control', placeholder: t('sessions.sign_up.password_confirmation')
      .form-actions
        = f.submit t('sessions.sign_up.submit'), class: 'btn btn-block btn-large btn-danger'
        .forgot