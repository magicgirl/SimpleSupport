.signup-box.visible.widget-box.no-border
  .widget-body
    .widget-main
      %h4.header.green.lighter.bigger
        %i.icon-group.blue
        = t 'sessions.sign_up.title'
      .space-6
      %p= t 'sessions.sign_up.details_to_begin'
      = form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
        - if resource.errors.present?
          .alert.alert-danger
            %ul.list-unstyled
              - resource.errors.full_messages.each do |message|
                %li= message

        %fieldset
          %label.block.clearfix
            %span.block.input-icon.input-icon-right
              = f.email_field :email, :autofocus => true, class: 'form-control', placeholder: t('sessions.sign_up.email')
              %i.icon-envelope
          %label.block.clearfix
            %span.block.input-icon.input-icon-right
              = f.password_field :password, class: 'form-control', placeholder: t('sessions.sign_up.password')
              %i.icon-lock
          %label.block.clearfix
            %span.block.input-icon.input-icon-right
              = f.password_field :password_confirmation, class: 'form-control', placeholder: t('sessions.sign_up.password_confirmation')
              %i.icon-retweet
          .space-24
          .clearfix
            %button.width-30.pull-left.btn.btn-sm{type: "reset"}
              %i.icon-refresh
              = t('sessions.sign_up.reset')
            = f.button class: 'width-65 pull-right btn btn-sm btn-success', type: 'submit' do
              = t('sessions.sign_up.submit')
              %i.icon-arrow-right.icon-on-right
    .toolbar.center
      = link_to new_session_path(resource_name), class: 'back-to-login-link' do
        %i.icon-arrow-left
        = t 'sessions.sign_up.back_to_login'